@using Microsoft.AspNetCore.Identity
@using Yogalates.Models
@inject SignInManager<YogalatesUser> SignInManager
@inject UserManager<YogalatesUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <li>
        <a asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Здравей, @User.Identity.Name!</a>
    </li>
    <li>
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button  type="submit" class="nav-link btn btn-link">Излез</button>
        </form>
    </li>
}
else
{
    <li>
        <a asp-area="Identity" asp-page="/Account/Register">Регистрирай се</a>
    </li>
    <li>
        <a asp-area="Identity" asp-page="/Account/Login">Влез</a>
    </li>
}